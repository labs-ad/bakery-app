#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ“ Validating commit message..."

# Simple commit message validation
# Ensures commit message is not empty and has reasonable length
commit_regex='^.{10,}$'

if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message format!"
    echo "ğŸ’¡ Commit message should be at least 10 characters long"
    echo "ğŸ’¡ Example: 'Add user authentication feature'"
    exit 1
fi

echo "âœ… Commit message format is valid!"